html 
    head 
        title Easy Car Rent 
        link(href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    body 
        .container
            h2 Easy Car Rent
            p(style={color:error ? 'red':'green'}) #{message}
                form(action="/", method="POST") 
                    div.row
                        div.col
                            label Username 
                            input.form-control(type="text", placeholder="Username", name = "username") 
                       
                    .row 
                        .col 
                            label Password
                            input.form-control(type="text", placeholder="Password", name = "password")
                     
                    hr
                    .row 
                        .col
                            button.btn.btn-success Guardar
                    hr
                    .row 
                        .col
                            a(href="http://localhost:3200/registro").btn.btn-primary.text-white No tienes cuenta? Registrate
                    