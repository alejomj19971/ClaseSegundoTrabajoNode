html 
    head 
        title Autos 
        link(href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    body 
        .container
            h2 Rentar un Auto
            p(style={color:error ? 'red':'green'}) #{message}
                form(action="/rent", method="POST") 
                    div.row
                        div.col
                            label Platenumber 
                            input.form-control(type="text", placeholder="Platenumber", name = "platenumber") 
                        .col
                            label Username
                            input.form-control(type="text", placeholder="Username", name = "username")
                    
                    .row 
                        .col 
                            label Rentnumber
                            input.form-control(type="text", placeholder="Rentnumber", name = "rentnumber")
                    .row 
                        .col 
                            label Rent Date
                            input.form-control(type="text", placeholder="State", name = "rentdate")
                        
                    hr
                    .row 
                        .col
                            button.btn.btn-success Guardar 
                    br
                    .row 
                        .col
                            a(href="http://localhost:3200/car").btn.btn-primary.text-white  Volver
                    
                    hr
                    if rents.length>0 
                        table.table.table-hover
                            thead
                                th Rent Number
                                th Username
                                th Platenumber 
                                th(colspan="2") Acciones
                            for rent in rents 
                                tr
                                    td #{rent.rentnumber}
                                    td #{rent.username}
                                    td #{rent.platenumber}
                                    
                                    td
                                        a.btn.btn-dark Editar
                                    td
                                        a.btn.btn-dark Eliminar
                    else
                        h4(style={color:'red'}) No hay Automoviles Rentados
                        

                