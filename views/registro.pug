html 
    head 
        title Registro 
        link(href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    body 
        .container
            h2 Registrate y renta los mejores autos al mejor precio
            p(style={color:error ? 'red':'green'}) #{message}
                form(action="/registro", method="POST") 
                    div.row
                        div.col
                            label Username 
                            input.form-control(type="text", placeholder="Username", name = "username") 
                        .col
                            label Name
                            input.form-control(type="text", placeholder="Name", name = "name")
                    .row 
                        .col 
                            label Password
                            input.form-control(type="text", placeholder="Password", name = "password")
                        
                    hr
                    .row 
                        .col
                            button.btn.btn-success Registarse
                    hr
                    .row 
                        .col
                            a(href="http://localhost:3200").btn.btn-primary.text-white Volver
                     
                     
                    
                        

                